<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Members Only</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-gray-100 text-gray-900">
        <header class="bg-white shadow p-6">
            <div class="max-w-4xl mx-auto flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-indigo-600">
                        Members Only
                    </h1>
                    <p class="text-gray-600">
                        Exclusive content for registered users
                    </p>
                </div>

                <div class="text-right">
                    <% if (user) { %>
                    <p class="text-gray-700 font-medium mb-1">
                        Hello, <%= `${user.first_name} ${user.last_name}` %>!
                    </p>
                    <a
                        href="/auth/logout"
                        class="text-sm text-indigo-600 hover:underline"
                        >Logout</a
                    >
                    <% } else { %>
                    <a
                        href="/auth/login"
                        class="text-sm text-indigo-600 hover:underline"
                        >Login</a
                    >
                    <% } %>
                </div>
            </div>
        </header>

        <main class="max-w-4xl mx-auto mt-10 px-4">
            <h2 class="text-2xl font-semibold mb-6">Latest Posts</h2>

            <div class="space-y-6">
                <% posts.forEach(post => { %>
                <div
                    class="bg-white rounded-xl shadow p-5 hover:shadow-md transition"
                >
                    <h3 class="text-xl font-semibold text-indigo-700">
                        <%= post.title %>
                    </h3>
                    <p class="text-sm text-gray-500 mb-2">
                        Posted by <% if (user !="guest" ) { %>
                        <span class="font-medium"
                            ><%= post.first_name %> <%= post.last_name %></span
                        >
                        <% } else { %>
                        <span class="font-medium"
                            ><%= "!! USERNAME HIDDEN, LOGIN TO REEVEAL !!"
                            %></span
                        >
                        <% } %>
                    </p>
                    <p class="text-gray-700"><%= post.content %></p>
                </div>
                <% }) %>
            </div>
        </main>
    </body>
</html>
